<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:src="@drawable/info_flame_bg_line"
        android:scaleType="fitXY" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:id="@+id/HeaderView">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6.3"
                    android:background="@null" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5.5"
                    android:layout_margin="5dp"
                    android:background="@null">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/FramePinView"
                        android:scaleType="fitCenter"
                        android:background="@null"
                        android:src="@drawable/info_flame_icon_flame_name"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/PlacePinView"
                        android:layout_weight="1"
                        android:background="@null"
                        android:src="@drawable/info_location_icon_location_name"
                        android:scaleType="fitCenter"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/CollectionPinView"
                        android:src="@drawable/flame_collection_icon_pin"
                        android:scaleType="fitCenter"
                        android:layout_weight="1"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6.2"
                    android:background="@null"></LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:background="@null">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/AddressView"
                        android:layout_margin="5dp"
                        android:background="@null">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/AddressLabel"
                            android:gravity="center_vertical|bottom"
                            android:textIsSelectable="false"
                            android:textSize="15sp"
                            android:layout_marginBottom="5dp"
                            android:background="@null" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/TitleView"
                        android:layout_margin="5dp"
                        android:background="@null">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="New Text"
                            android:id="@+id/TitleLabel"
                            android:gravity="center_vertical"
                            android:textIsSelectable="false"
                            android:textSize="17sp"
                            android:background="@null" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/TopButtons"
            android:layout_weight="2.1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/GoToButtonView"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center|center_horizontal">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/GoToButton"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/flame_collection_info_btn_go_s"
                        android:layout_margin="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/TakePictureButtonView"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center|center_horizontal"
                    android:layout_margin="10dp">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/TakePictureButton"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/moreinfo_takepicturebutton" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/MainView"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/ImageView">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/PreviewImage"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    android:layout_margin="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:id="@+id/DescriptionView"
                android:layout_margin="10dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fastScrollEnabled="true">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="aasasasdsafsfdsafdsafdsadsafdsafdsafdsafdsafdsafdsafdsafdsa"
                        android:id="@+id/DescriptionLabel"
                        android:layout_gravity="center_horizontal"
                        android:textSize="22sp" />

                </ScrollView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:id="@+id/BottomButtons"
            android:baselineAligned="false">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"></LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/MoreInfoButton"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/info_flame_btn_more"
                    android:visibility="gone"/>

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/FrameGetButton_Disable"
                    android:src="@drawable/btn_flame_get_btn_flame_get_off"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    android:visibility="gone" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/FrameGetButton_Enable"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_flame_get_btn_flame_get_on"
                    android:background="@null"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"></LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>